@using ÖğrenciNotMVC.Models.EntityFrameWork
@model List<Tbl_Dersler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Ders ID </th>
        <th>Ders Adı </th>
        <th>İşlemler</th>
    </tr>
    <tbody>
        @foreach (var drs in Model)
        {
            <tr>
                <td>@drs.DersId</td>
                <td>@drs.DersAd</td>
                <td><a href="/dersler/sil/@drs.DersId" class="btn btn-danger">Sil</a>
                <a href="/dersler/dersgetir/@drs.DersId" class="btn btn-success">Güncelle</a></td>
            </tr>
        }

    </tbody>

</table>
<a href="/dersler/dersekle" class="btn btn-primary"> Yeni Ders Kaydı</a>
