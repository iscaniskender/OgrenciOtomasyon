@model ÖğrenciNotMVC.Models.EntityFrameWork.Tbl_Dersler

@{
    ViewBag.Title = "dersekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ders Ekleme</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.DersAd, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DersAd, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DersAd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                 <input type="submit" value="Ekle" class="btn btn-default" />
            </div>
        </div>
    </div>
}

