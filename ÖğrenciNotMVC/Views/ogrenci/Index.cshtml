@using ÖğrenciNotMVC.Models.EntityFrameWork
@model List<Tbl_Ogrenciler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Öğrenci ID </th>
        <th>Öğrenci Adı </th>
        <th>Öğrenci Soyad </th>
        <th>Öğrenci Cinsiyet </th>
        <th>Öğrenci Kulüp </th>
        <th>İşlemler </th>
    </tr>
    <tbody>
        @foreach (var ogr in Model)
        {
        <tr>
            <td>@ogr.OgrenciId</td>
            <td>@ogr.OgrenciAd</td>
            <td>@ogr.OgrenciSoyad</td>
            <td>@ogr.OgrenciCinsiyet</td>
            <td>@ogr.OgrenciKulup</td>
            <td> <a href="/ogrenci/sil/@ogr.OgrenciId" class="btn btn-danger">Sil</a>
                <a href="/ogrenci/ogrencigetir/@ogr.OgrenciId" class="btn btn-success">Güncelle</a></td>
        </tr>
        }

    </tbody>

</table>
<a href="/ogrenci/ogrenciekle" class="btn btn-primary">Yeni Öğrenci Ekle</a>